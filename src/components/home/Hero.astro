---
import { IHeroProps } from "@types";

const { name, about } = Astro.props as IHeroProps;

---

<section class="hero-section">
  <h1 class="hero-heading">{name}</h1>
  <p class="dark:text-light text-lg mb-16">
    {about}
  </p>
</section>
<style>
  .hero-heading .letter {
    display: inline-block;
    line-height: 1em;
  }
</style>